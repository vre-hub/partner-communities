[client]
rucio_host = https://et-rucio-server.to.infn.it:443
auth_host = https://et-rucio-server.to.infn.it:443
auth_type = oidc
oidc_issuer = et-indigo-iam
oidc_audience = rucio
oidc_scope = openid profile offline_access
oidc_polling = true
auth_oidc_refresh_activate = true
request_retries = 3
multi_host_commands = whoami, ping, list, download
multi_host_servers = ET server, CE server

[ET server]
config_file = /opt/rucio/etc/rucio.cfg

[CE server]
config_file = /opt/rucio/etc/rucio_CE.cfg
